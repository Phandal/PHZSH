alias ls="exa -a --icons --group-directories-first"
alias grep="grep --color=auto"

alias cp="cp -i"
alias rm="rm -i"
alias mv="mv -i"

alias ga="git add"
alias gs="git status"
alias gc="git checkout \$(git branch -a | fzf)"
alias gcm="git commit"
alias gd="git diff"
alias gdt="git difftool"

if ! command -v bat &> /dev/null
then
  alias cat="batcat"
else
  alias cat="bat"
fi
